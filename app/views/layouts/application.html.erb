<!DOCTYPE html>
<html>

<head>
  <title>TwitterClone</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if flash[:notice] %>
    <div class="alert-success">
      <p class="toast-body"><%= notice %></p>
    </div>
  <% else flash[:alert] %>
    <div class="alert-warning">
      <p class="toast-body"><%= alert %></p>
    </div>
  <% end %>

  <nav class="navbar sticky-top navbar-light bg-light navbar-expand-lg px-3">
      <%= link_to 'Twitter Clone', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to 'Tweets', tweets_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
  </nav>
  <%= yield %>
</body>

</html>