<% @tweets.each do |tweet| %>
<div class="container mt-4">
  <div class="row justify-center">
    <div class="card text-dark bg-light p-0">
      <div class="card-header">Posted By#</div>
      <div class="card-body">
        <h5 class="card-title">Tweets</h5>
        <p class="card-text"><%= tweet.tweet %></p>
      </div>
      <div class="card-footer">
        <%= link_to 'Show', tweet %>
        <%= link_to 'Edit', edit_tweet_path(tweet) %>
        <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'New Post', new_tweet_path %>
      </div>
    </div>
  </div>
</div>
<% end %>