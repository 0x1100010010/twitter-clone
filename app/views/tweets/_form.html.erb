<%= simple_form_for(@tweet) do |f| %>

  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="container mt-4">
          <div class="row justify-center">
            <div class="card text-dark bg-light p-0">
              <div class="card-header">New Post</div>
              <div class='card-body'>
                <div class="form-inputs">
                  <%= f.input :tweet, label: "Tweeet about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweeet...", autofocus: true %>
                </div>
              </div>  
              <div class="card-footer">
                <div class="form-actions">
                  <%= f.button :submit, class: "button is-info" %>
                  <%= link_to 'Cancel', tweets_path, class: "button is-dark" %>
                </div>
              </div>
            </div>
          </div>
        </div>
<% end %>
